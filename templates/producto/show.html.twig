{% extends 'base.html.twig' %}
{% import 'macro/breadcrumb.html.twig' as breadcrumb %}
{% import 'macro/action.html.twig' as action %}

{% set _title = 'Producto' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'producto_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ action.tbl_start() }}
        {{ action.tbl_tr('Nombre',producto.nombre) }}
        {{ action.tbl_tr('Categoria',producto.categoria) }}
        {{ action.tbl_tr('Precio Unitario',producto.precioUnitario) }}
        {{ action.tbl_tr('Precio Venta',producto.precioVenta) }}
        {{ action.tbl_tr('Descripcion',producto.descripcion) }}
        {% include 'crud/_show_info.html.twig' with {'entity': producto} %}
    {{ action.tbl_end() }}

{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'producto','entity': producto} %}
{% endblock %}

{% block _main_tools %}
    {% include 'crud/_tools_ico.html.twig' %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'producto','entity': producto} %}
{% endblock %}

{% block _body_tools_ico %}
    {% include 'crud/_show_links_tool.html.twig' with {'route_base':'producto','entity': producto} %}
{% endblock %}