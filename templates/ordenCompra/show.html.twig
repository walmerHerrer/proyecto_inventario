
{% extends 'base.html.twig' %}
{% import 'macro/breadcrumb.html.twig' as breadcrumb %}
{% import 'macro/action.html.twig' as action %}

{% set _title = 'Orden Compra' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'numFactura_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ action.tbl_start() }}
        {{ action.tbl_tr('Trabajador',numFactura.trabajador) }}
        {{ action.tbl_tr('Proveedor',numFactura.proveedor) }}
        {{ action.tbl_tr('Fecha',numFactura.fecha) }}
        {{ action.tbl_tr('precio',numFactura.precio_orden) }}
        {{ action.tbl_tr('cantidad',numFactura.cantidad_orden) }}
        {{ action.tbl_tr('Numerp factura',numFactura.numFactura) }}
        {% include 'crud/_show_info.html.twig' with {'entity': numFactura} %}
    {{ action.tbl_end() }}

{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'numFactura','entity': numFactura} %}
{% endblock %}

{% block _main_tools %}
    {% include 'crud/_tools_ico.html.twig' %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'numFactura','entity': numFactura} %}
{% endblock %}

{% block _body_tools_ico %}
    {% include 'crud/_show_links_tool.html.twig' with {'route_base':'numFactura','entity': numFactura} %}
{% endblock %}
